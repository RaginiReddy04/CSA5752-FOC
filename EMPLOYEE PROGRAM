#include<stdio.h>

#include<string.h>

main( )

{

int i, j;

float salary, bonus;

char grade;

printf ("Enter A for Grade and B for Grade\n");

scanf ("%c", &grade);

printf ("Enter salary\n");

scanf ("%f", &salary);

if (grade == 'A' || grade == 'a')

{

if (salary>10000)

bonus = (float) (salary*0.05); // 0.05 - - 5%

else

bonus = (float) (salary*0.07);

}

if (grade == 'B' || grade == 'b')

{

if (salary>10000)

bonus = (float) (salary*0.01); // 0.1 - - 10%

else

bonus = (float) (salary*0.12) ;

}

salary+=bonus;

printf ("Bonus=%.2f\nsalary=%.2f\n", bonus, salary) ;

}

